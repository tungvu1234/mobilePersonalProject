<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@drawable/card_background">

    <ImageView
        android:id="@+id/trophy_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/trophy_icon"
        android:contentDescription="Trophy Image"
        android:scaleType="centerCrop"
        android:layout_marginEnd="10dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/trophy_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trophy Name"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/trophy_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trophy Description"
            android:textSize="14sp"/>
    </LinearLayout>
</LinearLayout>